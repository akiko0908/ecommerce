@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Quản lý Hãng sản xuất";
}
@model IEnumerable<Ecommerce.Models.Brand>

<div class="manage_title">
    <h3>Danh sách Hãng sản xuất</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="nottifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#nottifyMsg').fadeOut('slow');
    }, 2500);
</script>

<hr>

<div style="margin: 0 auto; width: 40em;">
    <table class="table">
        <tr>
            <th>Mã hãng sản xuất</th>
            <th>Tên hãng sản xuất</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.brand_ID</td>
                <td>@item.brand_Name</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ManageBrand" asp-action="Edit"
                        asp-route-id="@item.brand_ID">Edit</a> |
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="ManageBrand" asp-action="Delete"
                        asp-route-id="@item.brand_ID">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
