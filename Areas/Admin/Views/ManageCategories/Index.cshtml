@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Quản lý Loại sản phẩm";
}
@model IEnumerable<Ecommerce.Models.Categories>

<div class="manage_title">
    <h3>Danh sách thông tin Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="nottifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#nottifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>

<div>
    <a asp-action="Create" class="btn btn-success">Thêm mới Loại sản phẩm</a>
</div>
<div style="margin: 0 auto; width: 40em;">
    <table class="table">
        <tr>
            <th>Mã loại sản phẩm</th>
            <th>Tên loại sản phẩm</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.categories_ID</td>
                <td>@item.categories_Name</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ManageCategories" asp-action="Edit"
                        asp-route-id="@item.categories_ID">Edit</a> |
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="ManageCategories" asp-action="Delete"
                        asp-route-id="@item.categories_ID">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
