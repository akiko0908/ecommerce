@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Tạo mới Loại sản phẩm";
}
@model Ecommerce.Models.Customer

<div class="manage_title">
    <h3>Thêm mới Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>
<div class="manage_content">
    <form asp-controller="ManageCustomer" method="POST">
        <div class="form-group row">
            <label asp-for="@Model.customer_ID" hidden class="col-sm-2 offset-sm-1 col-form-label"></label>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.customer_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.customer_Name" class="form-control" placeholder="Tên khách hàng...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.customer_PhoneNumber" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.customer_PhoneNumber" class="form-control"
                    placeholder="Số điện thoại khách hàng...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.customer_Email" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.customer_Email" class="form-control" placeholder="Email...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.customer_AddressShip1" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.customer_AddressShip1" class="form-control"
                    placeholder="Địa chỉ nhận hàng 1...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.customer_AddressShip2" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.customer_AddressShip2" class="form-control"
                    placeholder="Địa chỉ nhận hàng 2...">
            </div>
        </div>
        <hr>
        <div class="form-group offset-sm-7">
            <a asp-action="Index" asp-area="Admin" class="btn btn-danger">Cancel</a>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary">Save Create</a>
        </div>
    </form>
</div>
