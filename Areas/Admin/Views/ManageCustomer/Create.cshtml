@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Tạo mới Loại sản phẩm";
}
@model Ecommerce.Models.Customer

<div class="manage_title">
    <h3>Thêm mới Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>

<div class="manage_content">
    <form asp-controller="ManageCustomer" asp-action="Create" method="POST">
        <div class="form-group row">
            <label asp-for="@Model.customer_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Name" class="form-control" placeholder="Tên khách hàng...">
            </div>
            <span asp-validation-for="customer_Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_PhoneNumber" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_PhoneNumber" class="form-control">
            </div>
            <span asp-validation-for="customer_PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_Email" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Email" class="form-control" placeholder="Email...">
            </div>
            <span asp-validation-for="customer_Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_AddressShip" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_AddressShip" class="form-control">
            </div>
            <span asp-validation-for="customer_AddressShip" class="text-danger"></span>
        </div>
        <hr>

        <div class="form-group offset-sm-7">
            <a asp-action="Index" asp-area="Admin" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Create</button>
        </div>
    </form>
</div>
