@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Cập nhật thông tin Loại sản phẩm";
}
@model Ecommerce.Models.Customer

<div class="manage_title">
    <h3>Cập nhật thông tin Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.nofifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMessage').fadeOut('slow');
    }, 2500);
</script>
<hr>

<div class="manage_content">
    <form asp-controller="ManageCategories" asp-action="Edit" method="POST">
        <div class="form-group row">
            <label asp-for="customer_ID" hidden class="col-sm-2 offset-sm-1 col-form-label"></label>
        </div>

        <div class="form-group row">
            <label asp-for="customer_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Name" class="form-control">
            </div>
            <span asp-validation-for="customer_Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_PhoneNumber" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_PhoneNumber" class="form-control">
            </div>
            <span asp-validation-for="customer_PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_Email" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Email" class="form-control">
            </div>
            <span asp-validation-for="customer_Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_AddressShip1" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_AddressShip1" class="form-control">
            </div>
            <span asp-validation-for="customer_AddressShip1" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="customer_AddressShip2" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_AddressShip2" class="form-control">
            </div>
            <span asp-validation-for="customer_AddressShip2" class="text-danger"></span>
        </div>
        <hr>
        <div class="form-group offset-sm-7">
            <a asp-action="Index" asp-area="Admin" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Update</button>
        </div>
    </form>
</div>