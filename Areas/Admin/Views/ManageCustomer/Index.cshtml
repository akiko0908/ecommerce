@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Quản lý Loại sản phẩm";
}
@model IEnumerable<Ecommerce.Models.Customer>

<div class="manage_title">
    <h3>Danh sách thông tin Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="nottifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}
<script type="text/javascript">
    setTimeout(function () {
        $('#nottifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>
<div class="row">
    <div class="col-sm-2 offset-sm-1">
        <a asp-action="Create" class="btn btn-success">Tạo mới Khách hàng</a>
    </div>

    <form asp-action="Index" method="GET">
        <div class="row">
            <div class="col-sm-5 row">
                <label for="customer_name" class="col-sm-5 col-form-label">Tên khách hàng</label>
                <div class="col-sm-7">
                    <input type="text" id="customer_name" name="search_name" value="" class="form-control">
                </div>
            </div>

            <div class="col-sm-5 row">
                <label for="customer_phone" class="col-sm-5 col-form-label">Số điện thoại</label>
                <div class="col-sm-7">
                    <input type="text" id="customer_phone" name="search_phone" value="" class="form-control">
                </div>
            </div>

            <div class="col-sm-2">
                <input type="submit" value="Tìm kiếm">
            </div>
        </div>
    </form>
</div>
<div style="margin: 0 auto; width: 70em; margin-top: 3px;">
    <table class="table">
        <tr>
            <th>Mã khách hàng</th>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ 1</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.customer_ID</td>
                <td>@item.customer_Name</td>
                <td>@item.customer_PhoneNumber</td>
                <td>@item.customer_Email</td>
                <td>@item.customer_AddressShip</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ManageCustomer" asp-action="Edit"
                        asp-route-id="@item.customer_ID">Edit</a> |
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="ManageCustomer" asp-action="Delete"
                        asp-route-id="@item.customer_ID">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
