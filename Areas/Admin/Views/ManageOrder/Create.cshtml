@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Tạo đơn hàng mới";
}
@model Ecommerce.Models.Order

TODO:@* tạo hóa đơn cho đơn hàng sẽ được hoàn thành sau *@

<div class="manage_title">
    <h3>Tạo mới đơn hàng</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}

<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>
<div class="manage_content">
    <form asp-controller="ManageOrder" method="POST">
        <div class="form-group row">
            <label asp-for="@Model.order_ID" hidden class="col-sm-2 offset-sm-1 col-form-label"></label>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Customer.customer_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.Customer.customer_Name" class="form-control"
                    placeholder="Nhập tên khách hàng...">
            </div>
        </div>
        <hr>
        <div class="form-group offset-sm-7">
            <a asp-action="Index" asp-area="Admin" class="btn btn-danger">Cancel</a>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary">Save Create</a>
        </div>
    </form>
</div>
