@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Tạo mới Khuyến mãi";
}
@model Ecommerce.Models.Promotion

<div class="manage_title">
    <h3>Thêm mới Khuyến mãi</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}
<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>
<div class="manage_content">
    <form asp-controller="ManagePromotion" method="POST">
        <div class="form-group row">
            <label asp-for="@Model.promotion_ID" hidden class="col-sm-2 offset-sm-1 col-form-label"></label>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.promotion_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.promotion_Name" class="form-control"
                    placeholder="Nhập tên KHUYẾN MÃI...">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.promotion_Percent" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="@Model.promotion_Percent" class="form-control"
                    placeholder="Nhập phần trăm chiết khấu KHUYẾN MÃI...">
            </div>
        </div>
        <hr>
        <div class="form-group offset-sm-7">
            <a asp-action="Index" asp-area="Admin" class="btn btn-danger">Cancel</a>
            <a asp-action="Create" asp-area="Admin" class="btn btn-primary">Save Create</a>
        </div>
    </form>
</div>
