@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Xóa Loại sản phẩm";
}
@model Ecommerce.Models.Promotion


<div class="manage_title">
    <h3>Xóa Loại sản phẩm</h3>
</div>

@if (ViewBag.notifyMsg != null)
{
    <div id="notifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}
<script type="text/javascript">
    setTimeout(function () {
        $('#notifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>

<div class="row">
    <div class="col-sm-4 offset-sm-1">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model =>model.promotion_ID)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model =>model.promotion_ID)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model =>model.promotion_Name)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model =>model.promotion_Name)
            </dd>

            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.promotion_Percent)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.promotion_Percent)
            </dd>
        </dl>
    </div>
</div>
<hr>
<div class="manage_footer">
    <a asp-controller="ManagePromotion" asp-action="Index" class="btn btn-info">Cancel</a>
    <a asp-controller="ManagePromotion" asp-action="ConfirmDelete" asp-route-id="@Model.promotion_ID"
        class="btn btn-danger">Confirm Delete</a>
</div>