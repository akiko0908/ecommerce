@{
    Layout = "_LayoutAdmin";
    ViewData["TitleAdmin"] = "Quản lý Nhà cung cấp";
}
@model IEnumerable<Ecommerce.Models.Supplier>

<div class="manage_title">
    <h3>Danh sách Nhà cung cấp</h3>
</div>
@if (ViewBag.notifyMsg != null)
{
    <div id="nottifyMsg" class="alert alert-success" role="alert">
        @ViewBag.notifyMsg
    </div>
}
<script type="text/javascript">
    setTimeout(function () {
        $('#nottifyMsg').fadeOut('slow');
    }, 2500);
</script>
<hr>

<div>
    <a asp-action="Create" class="btn btn-success">Thêm mới Nhà cung cấp</a>
</div>
<div style="margin: 0 auto; width: 40em;">
    <table class="table">
        <tr>
            <th>Mã Nhà cung cấp</th>
            <th>Tên Nhà cung cấp</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.supplier_ID</td>
                <td>@item.supplier_Name</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ManageSupplier" asp-action="Edit"
                        asp-route-id="@item.supplier_ID">Edit</a> |
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="ManageSupplier" asp-action="Delete"
                        asp-route-id="@item.supplier_ID">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
