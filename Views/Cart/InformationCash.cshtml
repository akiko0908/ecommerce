@{
    ViewData["Title"] = "Thông tin thanh toán";
}
@model Ecommerce.Models.Customer
@* nhập thông tin khách hàng mua sản phẩm *@
@* tạo mới thông tin khách hàng khi thông tin khách hàng chưa tồn tài *@

<div class="manage_title">
    <h3>Nhập thông tin khách hàng</h3>
</div>
<hr>

<div class="manage_content">
    <form asp-area="" asp-controller="Cart" asp-action="InformationCash" method="POST">
        <div class="form-group row">
            <label asp-for="customer_ID" hidden class="col-sm-2 offset-sm-1 col-form-label"></label>
        </div>

        <div class="form-group row">
            <label asp-for="customer_Name" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Name" class="form-control" placeholder="Tên khách hàng...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="customer_PhoneNumber" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_PhoneNumber" class="form-control"
                    placeholder="Số điện thoại khách hàng...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="customer_Email" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_Email" class="form-control" placeholder="Email...">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="customer_AddressShip1" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_AddressShip1" class="form-control"
                    placeholder="Địa chỉ nhận hàng 1..." value="">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="customer_AddressShip2" class="col-sm-2 offset-sm-1 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="customer_AddressShip2" class="form-control"
                    placeholder="Địa chỉ nhận hàng 2..." value="">
            </div>
        </div>
        <hr>
        <div class="form-group offset-sm-7">
            <a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </form>
</div>
