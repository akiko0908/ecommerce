<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CellphoneStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CellphoneStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown__select" asp-area="" asp-controller="Home"
                                asp-action="Index">Điện
                                thoại</a>
                            <ul class="dropdown__list">
                                <li class="dropdown__item">
                                    <a asp-controlle="Home" asp-action="CategoriesView" asp-route-idBrand="1"
                                        class="dropdown__text">APPLE</a>
                                </li>
                                <li class="dropdown__item">
                                    <a asp-controlle="Home" asp-action="CategoriesView" asp-route-idBrand="2"
                                        class="dropdown__text">SAMSUNG</a>
                                </li>
                                <li class="dropdown__item">
                                    <a asp-controlle="Home" asp-action="CategoriesView" asp-route-idBrand="3"
                                        class="dropdown__text">OPPO</a>
                                </li>
                                <li class="dropdown__item">
                                    <a asp-controlle="Home" asp-action="CategoriesView" asp-route-idBrand="4"
                                        class="dropdown__text">XIAOMI</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Phụ
                                kiện</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Tablet</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Trả góp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Liên lạc</a>
                        </li>
                    </ul>
                </div>
                <form asp-controller="Home" asp-action="Search" method="post">
                    <div class="search-text">
                        <input type="text" name="stringSearch" placeholder="Nhập sản phẩm cần tìm kiếm..." value="">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>

                @await Html.PartialAsync("_CartPartial")

                @* <a class="cart" asp-controller="Cart" asp-action="Index">Giỏ hàng<i class="fa
                    fa-shopping-cart"></i></a> *@

                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/banner-iphone-12-2.jpg" class="d-block w-100" alt="iPhone 12" height="400">
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner-iphone12-pro.jpg" class="d-block w-100" alt="iPhone 12 Pro" height="400">
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner-samsung-galaxy-s9-plus.png" class="d-block w-100" alt="Samsung S9 Plus"
                        height="400">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="border-top footer text-muted">
            &copy; 2020 - CellphoneStoreEcommerce - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
